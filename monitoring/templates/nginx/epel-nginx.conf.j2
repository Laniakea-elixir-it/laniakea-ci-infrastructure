# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

load_module modules/ngx_http_upload_module.so;

user {{ nginx_conf_user | default('nginx') }}{{ " " ~ nginx_conf_group if nginx_conf_group is defined else "" }};
worker_processes {{ nginx_conf_worker_processes | default('auto') }};
error_log /var/log/nginx/error.log;
pid {{ "/run" if ansible_os_family == "RedHat" and ansible_distribution_major_version == "7" else "/var/run" }}/nginx.pid;
daemon {{ "off" if nginx_supervisor else "on" }};
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections {{ nginx_conf_worker_connections | default('1024') }};
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   80;
    types_hash_max_size 2048;

    # compress responses whenever possible
    gzip  on;
    gzip_http_version 1.1;
    gzip_vary on;
    gzip_comp_level 4;
    gzip_proxied any;
    gzip_types text/plain text/css application/x-javascript text/xml application/xml text/javascript application/json;
    gzip_buffers 16 8k;

    # allow up to 3 minutes for Galaxy to respond to slow requests before timing out
    uwsgi_read_timeout 300;

    # maximum file upload size
    client_max_body_size 10g;

    client_body_temp_path /tmp 1 2;
    client_body_buffer_size 256k;
    client_body_in_file_only off;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    {% if nginx_enable_default_server | default(true) %}
    server {
        listen       80 default_server;
        {% if nginx_enable_default_ipv6 %}
        listen       [::]:80 default_server;
        {% endif %}
        server_name  _;
        root         /usr/share/nginx/html;

        # Load configuration files for the default server block.
        include /etc/nginx/default.d/*.conf;

        location / {
        }

        error_page 404 /404.html;
            location = /40x.html {
        }

        error_page 500 502 503 504 /50x.html;
            location = /50x.html {
        }
    }
    {% endif %}
}
